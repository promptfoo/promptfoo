{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/index.ts",
    "src/app/src/index.ts",
    "src/server/index.ts"
  ],
  "project": [
    "src/**/*.{js,ts,tsx}"
  ],
  "ignore": [
    "dist/**/*.{js,ts,tsx}",
    "examples/**/*.{js,ts,tsx,mjs}"
  ],
  "workspaces": {
    "site": {
      "entry": [
        "site/src/**/*.{js,ts,tsx}",
        "site/blog/**/*.{js,ts,tsx}"
      ],
      "project": [
        "site/**/*.{js,ts,tsx}"
      ]
    }
  },
  "paths": {
    "@promptfoo/*": [
      "./src/*"
    ]
  }
}