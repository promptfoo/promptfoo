{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": "./"
  },
  "include": ["src", "test", "./package.json", "src/**/*.json", "test/**/*.json"],
  "exclude": ["node_modules", "dist", "src/workers/**/*", "src/app/**/*", "test/site/"]
}
