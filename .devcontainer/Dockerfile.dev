FROM mcr.microsoft.com/vscode/devcontainers/javascript-node:0-20

# Install additional OS packages if needed
RUN apt-get update && export DEBIAN_FRONTEND=noninteractive \
    && apt-get -y install --no-install-recommends \
    jq htop \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install global npm packages
RUN npm install -g typescript@latest npm@latest

# Set up npm directories and cache directory
RUN mkdir -p /home/node/.promptfoo && \
    chown -R node:node /home/node

USER node
WORKDIR /workspace

# Copy package.json and package-lock.json
COPY --chown=node:node package*.json ./

# Install dependencies
RUN npm ci && npm link
