{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@promptfoo/*": ["./src/*"],
      "@server/*": ["./src/server/*"],
      "@app/*": ["./src/web/nextui/src/*"]
    }
  },
  "include": ["src/", "typings/**/*", "test/"],
  "exclude": [
    "node_modules",
    "dist",
    "src/web/client/**/*",
    "src/web/nextui/**/*",
    "src/workers/**/*"
  ]
}
