{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": "./"
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/", "./package.json", "src/**/*.json", "src/types/globals.d.ts"],
  "exclude": ["node_modules", "dist", "src/workers/**/*", "src/app/**/*", "test/", "src/__mocks__/"]
}
