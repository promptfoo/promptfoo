{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "composite": true
  },
  "references": [{ "path": "./src/web/nextui" }],
  "include": ["package.json", "src/**/*", "typings/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/web/client/**/*",
    "src/web/nextui/**/*",
    "src/workers/**/*"
  ]
}
