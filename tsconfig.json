{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": ".",
    "baseUrl": "./"
  },
  "ts-node": {
    "swc": true
  },
  "include": [
    "src/",
    "test/",
    "./package.json",
    "src/**/*.json",
    "test/**/*.json",
    "src/types/globals.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/app/**/*",
    "src/workers/**/*",
    "test/app/**/*",
    "test/code-scan-action/**/*",
    "test/codeScans/**/*",
    "test/database/**/*",
    "test/matchers/**/*",
    "test/site/",
    "test/testCase/**/*",
    "test/utils/**/*",
    "test/validators/**/*"
  ]
}
