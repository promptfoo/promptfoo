# Cross-platform container for testing Windows-specific issues on Mac/Linux
FROM node:20-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    git \
    curl \
    wget \
    locales \
    locales-all \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Configure locales for Unicode testing
RUN locale-gen en_US.UTF-8
ENV LANG=en_US.UTF-8
ENV LANGUAGE=en_US:en
ENV LC_ALL=en_US.UTF-8

# Create symlink for python (some systems expect 'python' not 'python3')
RUN ln -sf /usr/bin/python3 /usr/bin/python

# Set working directory
WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Install Claude Code globally
RUN npm install -g @anthropic/claude-code

# Copy source code
COPY . .

# Build the project
RUN npm run build

# Set up environment variables to simulate different OS conditions
ENV NODE_ENV=development
ENV PROMPTFOO_DISABLE_SHARING=true
ENV FORCE_COLOR=1

# Test Python Unicode handling
RUN python3 -c "import sys; print(f'Python version: {sys.version}'); print('Unicode test: üî• caf√© r√©sum√© na√Øve')"

# Expose ports
EXPOSE 3000 8080

# Default command
CMD ["npm", "run", "dev"]