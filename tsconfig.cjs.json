{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "Node20",
    "moduleResolution": "Node16",
    "outDir": "dist/cjs",
    "rootDir": ".",
    "declarationMap": false,
    "sourceMap": false
  },
  "include": ["src", "test", "./package.json", "src/**/*.json", "test/**/*.json"],
  "exclude": ["node_modules", "dist", "src/workers/**/*", "src/app/**/*", "test/site/"]
}
