{
  "name": "promptfoo-database-certificates-example",
  "version": "1.0.0",
  "description": "Example demonstrating HTTP provider authentication with database-stored certificates",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "setup-certs": "node setup-certificates.js",
    "generate-configs": "node generate-configs.js",
    "setup": "npm run setup-certs && npm run generate-configs",
    "test": "echo 'Run: NODE_TLS_REJECT_UNAUTHORIZED=0 promptfoo eval --no-cache'",
    "clean": "rm -f certificate.* private.key promptfooconfig-*content*.yaml"
  },
  "keywords": [
    "promptfoo",
    "http-provider", 
    "certificates",
    "authentication",
    "database",
    "pfx",
    "signature"
  ],
  "dependencies": {
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Promptfoo",
  "license": "MIT"
}