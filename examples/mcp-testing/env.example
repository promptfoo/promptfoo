# MCP Server Configuration
# Copy this file to .env and update with your actual values

# General MCP Server Settings
MCP_SERVER_URL=https://your-mcp-server-url.com/mcp
MCP_API_KEY=your-mcp-api-key-here
MCP_AUTH_TOKEN=your-bearer-token-here

# Kubernetes MCP Server (if different from general)
K8S_MCP_SERVER_URL=https://your-k8s-mcp-server.com/mcp
K8S_API_KEY=your-k8s-api-key-here
K8S_AUTH_TOKEN=your-k8s-auth-token-here

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional Configuration
TENANT_ID=your-tenant-id-if-required
MCP_TIMEOUT=30000  # Timeout in milliseconds
MCP_MAX_RETRIES=3

# Test Configuration
TEST_NAMESPACE=default  # Default namespace for testing
ENABLE_DEBUG=false      # Set to true for verbose logging

# Security Settings
REQUIRE_APPROVAL=never  # Options: never, always, on_error
ALLOWED_NAMESPACES=default,test  # Comma-separated list

# Notes:
# - Never commit the actual .env file to version control
# - Keep your API keys secure and rotate them regularly
# - Use different keys for testing vs production
# - Consider using a secrets management service for production
