# Use Windows Server Core with Node.js
FROM mcr.microsoft.com/windows/servercore:ltsc2022

# Install Chocolatey
SHELL ["powershell", "-Command", "$ErrorActionPreference = 'Stop'; $ProgressPreference = 'SilentlyContinue';"]
RUN Set-ExecutionPolicy Bypass -Scope Process -Force; \
    [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; \
    iex ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))

# Install Node.js, Git, and Python
RUN choco install -y nodejs --version=20.18.0
RUN choco install -y git
RUN choco install -y python --version=3.11.9

# Refresh environment variables
RUN refreshenv

# Set working directory
WORKDIR C:\\app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the project
RUN npm run build

# Install Claude Code globally
RUN npm install -g @anthropic/claude-code

# Expose port for development server
EXPOSE 3000

# Set up environment
ENV NODE_ENV=development
ENV PROMPTFOO_DISABLE_SHARING=true

# Default command
CMD ["powershell", "-Command", "npm run dev"]